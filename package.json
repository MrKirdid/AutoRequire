{
	"name": "roblox-super-require",
	"displayName": "Roblox Super Require",
	"description": "Intelligent require autocomplete for Roblox Lua/Luau with fuzzy search",
	"version": "1.0.0",
	"publisher": "MrKirdid",
	"icon": "Images/Icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/MrKirdid/vscode-roblox-super-require.git"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"roblox",
		"lua",
		"luau",
		"require",
		"autocomplete"
	],
	"activationEvents": [
		"onLanguage:lua",
		"onLanguage:luau"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "robloxSuperRequire.reindex",
				"title": "Roblox Super Require: Reindex Modules"
			}
		],
		"languages": [
			{
				"id": "luau",
				"aliases": [
					"Luau"
				],
				"extensions": [
					".luau"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"configuration": {
			"title": "Roblox Super Require",
			"properties": {
				"robloxSuperRequire.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable the extension"
				},
				"robloxSuperRequire.maxSuggestions": {
					"type": "number",
					"default": 15,
					"minimum": 5,
					"maximum": 50,
					"description": "Maximum number of suggestions to show"
				},
				"robloxSuperRequire.fuzzyMatchStrength": {
					"type": "string",
					"enum": [
						"strict",
						"normal",
						"loose"
					],
					"default": "normal",
					"enumDescriptions": [
						"Strict matching - requires close match",
						"Normal matching - good balance",
						"Loose matching - very typo tolerant"
					],
					"description": "How tolerant fuzzy search is towards typos"
				},
				"robloxSuperRequire.pathStyle": {
					"type": "string",
					"enum": [
						"auto",
						"absolute",
						"relative"
					],
					"default": "auto",
					"enumDescriptions": [
						"Automatically choose shortest path",
						"Always use full game.Service.Path",
						"Prefer script.Parent paths when possible"
					],
					"description": "Preferred path style for require statements"
				},
				"robloxSuperRequire.excludePatterns": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"**/node_modules/**",
						"**/.git/**",
						"**/*.spec.lua*",
						"**/*.test.lua*",
						"**/*.story.lua*"
					],
					"description": "Glob patterns for files to exclude from indexing"
				},
				"robloxSuperRequire.useGetService": {
					"type": "boolean",
					"default": false,
					"description": "Use game:GetService() instead of game.ServiceName"
				},
				"robloxSuperRequire.debugMode": {
					"type": "boolean",
					"default": false,
					"description": "Enable debug logging to output channel"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "node esbuild.js",
		"watch": "node esbuild.js --watch",
		"package": "node esbuild.js --production",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/node": "^18.0.0",
		"@types/vscode": "^1.75.0",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"@vscode/vsce": "^2.19.0",
		"esbuild": "^0.27.2",
		"eslint": "^8.0.0",
		"typescript": "^5.0.0"
	}
}